{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["es6"],
    "allowJs": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "./*.ts",
    "./routes/**/*.ts",
    "./models/**/*.ts",
    "./controllers/**/*.ts",
    "./public/**/*.ts"
  ],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
